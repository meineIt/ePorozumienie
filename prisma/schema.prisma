// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  password           String
  firstName          String
  lastName           String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdAffairs     Affair[]            @relation("AffairCreator")
  involvedAffairs    Affair[]            @relation("AffairInvolved")
  affairParticipants AffairParticipant[]
}

model Affair {
  id              String   @id @default(cuid())
  title           String
  category        String?
  description     String?
  affairCreatedAt DateTime @default(now())
  affairValue     Float?
  files           String? // Można zmienić na bardziej zaawansowany typ w przyszłości
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relacja do użytkownika, który stworzył sprawę
  creatorId String
  creator   User   @relation("AffairCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  // Relacja do drugiego użytkownika zaangażowanego w sprawę
  involvedUserId String?
  involvedUser   User?   @relation("AffairInvolved", fields: [involvedUserId], references: [id], onDelete: Cascade)

  // Token referencyjny do zaproszenia drugiej strony
  inviteToken     String? @unique
  inviteTokenUsed Boolean @default(false)

  // Relacja do uczestników sprawy z ich statusami
  participants AffairParticipant[]

  // Analiza AI
  aiAnalysis            String?   // JSON z wynikami analizy AI
  aiAnalysisGeneratedAt DateTime? // data wygenerowania analizy
}

enum AffairStatus {
  REACTION_NEEDED
  WAITING
  DONE
}

model AffairParticipant {
  id          String       @id @default(cuid())
  userId      String
  affairId    String
  status      AffairStatus
  description String?
  files       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  affair Affair @relation(fields: [affairId], references: [id], onDelete: Cascade)

  @@unique([userId, affairId])
  @@index([userId])
  @@index([affairId])
  @@index([status])
}
