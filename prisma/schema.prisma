generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  password           String
  firstName          String
  lastName           String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdAffairs     Affair[]            @relation("AffairCreator")
  involvedAffairs    Affair[]            @relation("AffairInvolved")
  affairParticipants AffairParticipant[]
}

model Affair {
  id              String   @id @default(cuid())
  title           String
  category        String?
  description     String?
  affairCreatedAt DateTime @default(now())
  affairValue     Float?
  files           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  creatorId String
  creator   User   @relation("AffairCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  involvedUserId String?
  involvedUser   User?   @relation("AffairInvolved", fields: [involvedUserId], references: [id], onDelete: Cascade)

  inviteToken     String? @unique
  inviteTokenUsed Boolean @default(false)

  participants AffairParticipant[]

  aiAnalysis            String?
  aiAnalysisGeneratedAt DateTime?

  settlementProposalStatus        String?
  settlementAcceptedBy            String?
  settlementModificationRequests String?
}

enum AffairStatus {
  REACTION_NEEDED
  WAITING
  DONE
}

model AffairParticipant {
  id          String       @id @default(cuid())
  userId      String
  affairId    String
  status      AffairStatus
  description String?
  files       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  settlementAcceptedAt            DateTime?
  settlementModificationRequestedAt DateTime?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  affair Affair @relation(fields: [affairId], references: [id], onDelete: Cascade)

  @@unique([userId, affairId])
  @@index([userId])
  @@index([affairId])
  @@index([status])
}
